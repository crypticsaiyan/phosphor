/* Discord-inspired theme */

Screen {
    background: #36393f;
}

#sidebar {
    width: 28;
    background: #2f3136;
    border: solid #202225;
}

#sidebar:focus-within {
    border: solid #5865F2;
}

#chat-container {
    border: solid #202225;
}

#chat-container:focus-within {
    border: solid #5865F2;
}

#chat-pane {
    background: #36393f;
}

#member-list {
    width: 26;
    background: #2f3136;
    border: solid #202225;
}

#member-list:focus-within {
    border: solid #5865F2;
}

#input-bar {
    dock: bottom;
    height: 3;
    background: #40444b;
    border: solid #202225;
}

Input {
    background: #40444b;
    color: #dcddde;
    border: none;
}

#input-bar:focus {
    border: solid #5865F2;
}

.channel-item {
    color: #8e9297;
    padding: 0 1;
}

.channel-item:hover {
    background: #393c43;
    color: #dcddde;
}

.channel-active {
    color: #ffffff;
    background: #393c43;
}

/* DM section styling */
.dm-item {
    color: #43b581;
    padding: 0 1;
}

.dm-item:hover {
    background: #393c43;
    color: #ffffff;
}

.dm-unread {
    color: #faa61a;
    text-style: bold;
}

.unread {
    color: #ffffff;
    text-style: bold;
}

.member-online {
    color: #43b581;
}

.member-offline {
    color: #747f8d;
}

#member-hint {
    color: #72767d;
    text-style: italic;
    padding: 0 1;
    height: 1;
}

.message {
    padding: 0 1;
}

.message-row {
    width: 100%;
    height: auto;
    padding: 0 1;
}

.message-content {
    width: 1fr;
}

.message-time {
    width: auto;
    min-width: 6;
    text-align: right;
    color: #72767d;
}

.message-author {
    color: #5865F2;
    text-style: bold;
}

.system-message {
    color: #faa61a;
    text-style: italic;
}

.embed {
    background: #2f3136;
    border-left: thick #5865F2;
    padding: 1 2;
    margin: 1 0;
}

.embed-success {
    border-left: thick #43b581;
}

.embed-error {
    border-left: thick #ed4245;
}

/* ═══════════════════════════════════════════════════════════════════════════
   TELETEXT DASHBOARD - Authentic BBC Ceefax Style
   Black background, centered content, classic teletext colors
   ═══════════════════════════════════════════════════════════════════════════ */

TeletextScreen {
    background: #000000;
    layout: grid;
    grid-size: 1;
    grid-gutter: 0;
    align: center middle;
}

#teletext-container {
    background: #000000;
    width: 100%;
    height: 100%;
    align: center middle;
}

#dashboard-content {
    background: #000000;
    color: #ffffff;
    text-align: center;
    width: auto;
    height: auto;
    padding: 2 4;
    border: solid #ffffff;
}

/* Remove default header/footer for cleaner teletext look */
TeletextScreen Header {
    display: none;
}

TeletextScreen Footer {
    background: #000000;
    color: #00ffff;
    dock: bottom;
    height: 1;
}

/* ═══════════════════════════════════════════════════════════════════════════
   HOME SCREEN - Retro Terminal Style
   ═══════════════════════════════════════════════════════════════════════════ */

HomeScreen {
    background: #000000;
    align: center middle;
    layout: vertical;
}

#home-container {
    width: auto;
    height: auto;
    align: center middle;
    background: #000000;
}

#retro-display {
    width: auto;
    height: auto;
    text-align: center;
    background: #000000;
    color: #00ff00;
    padding: 1 2;
}

#nick-container {
    width: auto;
    height: auto;
    align: center middle;
}

#nick-input {
    width: 60;
    height: 3;
    background: #001100;
    color: #00ff00;
    border: solid #00aa00;
}

#nick-input:focus {
    border: solid #00ff00;
}

/* ═══════════════════════════════════════════════════════════════════════════
   CHANNEL SEARCH DIALOG
   ═══════════════════════════════════════════════════════════════════════════ */

#channel-search-dialog {
    width: 70;
    height: 35;
    background: #36393f;
    border: solid #5865F2;
    padding: 2;
    margin: 2;
}

.dialog-title {
    text-align: center;
    color: #ffffff;
    text-style: bold;
    margin-bottom: 1;
}

.section-header {
    color: #8e9297;
    margin: 1 0;
}

#channel-search-input {
    width: 100%;
    margin-bottom: 1;
}

#channel-list {
    height: 15;
    border: solid #202225;
    background: #2f3136;
}

.channel-item {
    color: #dcddde;
    padding: 0 1;
}

.channel-item:hover {
    background: #393c43;
}

Button {
    margin: 0 1;
    height: 3;
    min-width: 10;
    background: #40444b;
    color: #dcddde;
    border: solid #202225;
}

Button:hover {
    background: #5865F2;
    color: #ffffff;
}

Button.primary {
    background: #5865F2;
    color: #ffffff;
    border: solid #5865F2;
}

Button.success {
    background: #43b581;
    color: #ffffff;
    border: solid #43b581;
}

Button.warning {
    background: #faa61a;
    color: #ffffff;
    border: solid #faa61a;
}

#channel-search-dialog Button {
    margin: 1;
    height: 3;
    min-width: 12;
    color: #ffffff;
    text-align: center;
}

#channel-search-dialog Horizontal {
    height: auto;
    margin: 1 0;
}

#channel-search-dialog .dialog-title {
    height: 3;
    margin: 1 0;
}

#channel-search-dialog .section-header {
    height: 2;
    margin: 1 0;
}

#suggestions-list {
    height: 8;
    border: solid #202225;
    background: #2f3136;
    margin-bottom: 1;
}

.suggestion-item {
    color: #faa61a;
    padding: 0 1;
    text-style: italic;
}

.suggestion-item:hover {
    background: #393c43;
    color: #ffffff;
    text-style: bold;
}

.info-item {
    color: #8e9297;
    text-style: italic;
    padding: 0 1;
}


/* ═══════════════════════════════════════════════════════════════════════════
   COMMAND PALETTE - Slash command suggestions
   ═══════════════════════════════════════════════════════════════════════════ */

#command-palette {
    dock: bottom;
    offset: 0 -3;
    width: 50;
    height: auto;
    max-height: 12;
    background: #2f3136;
    border: solid #5865F2;
    padding: 0 1;
    display: none;
    layer: overlay;
}

#command-palette.visible {
    display: block;
}

#command-palette #command-list {
    height: auto;
}

#command-palette .command-item {
    padding: 0 1;
    height: 1;
}

#command-palette .command-item.highlighted {
    background: #5865F2;
}
